{
  "compilerOptions": {
    // Checking
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    // Resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    // Compilation
    "jsx": "preserve",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "sourceMap": true,
    "incremental": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib", "**/*.test.ts"]
}
